	"scripts": {
		"fix": "run-s format:fix packages:fix",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"postinstall": "lerna bootstrap",
		"lint": "run-s format packages:lint",
		"lint-staged": "lint-staged --concurrent false",
		"packages:fix": "lerna run fix --concurrency 1 --stream --no-bail",
		"packages:lint": "lerna run lint --no-bail",
		"packages:pre-commit": "lerna run pre-commit --concurrency 1 --stream --no-bail",
		"packages:test": "lerna run test --no-bail",
		"pre-commit": "run-s lint-staged packages:pre-commit",
		"test": "yarn packages:test"
	},
	"devDependencies": {
		"@prettier/plugin-xml": "^0.12.0",
		"husky": "^4.3.0",
		"lerna": "^3.22.1",
		"lint-staged": "^10.5.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.0",
		"prettier-plugin-organize-imports": "^1.1.1",
		"prettier-plugin-packagejson": "^2.2.8",
		"prettier-plugin-sh": "^0.6.0",
		"typescript": "^4.1.2"
	}
}
