    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "lodash": "^4.17.19",
    "redis": "^3.0.2",
    "uuid": "^7.0.3",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.0",
    "@types/convict": "^4.2.1",
    "@types/cors": "^2.8.6",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.3",
    "@types/express-ws": "^3.0.0",
    "@types/lodash": "^4.14.149",
    "@types/redis": "^2.8.18",
    "@types/uuid": "^7.0.2",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "ts-node": "^8.10.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
