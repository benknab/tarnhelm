{
	"name": "tarnhelm",
	"private": true,
	"repository": "git@github.com:bkiac/tarnhelm.git",
	"author": "Ben Kn√°b <benknab@pm.me>",
	"scripts": {
		"build": "lerna run build --no-bail",
		"check:format": "prettier --check \"./**/*{.ts,tsx,js,jsx,json,css,md}\"",
		"check:lint": "eslint --cache --ext js,ts,tsx .",
		"check:types": "lerna run check:types --no-bail",
		"checks": "run-s --continue-on-error check:*",
		"fix": "run-s fix:* packages:fix",
		"fix:format": "prettier --write \"./**/*{.ts,tsx,js,jsx,json,css,md}\"",
		"fix:lint": "yarn check:lint --fix",
		"postinstall": "lerna bootstrap",
		"test": "lerna run test --no-bail",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.22.1",
		"@typescript-eslint/parser": "^4.22.1",
		"eslint": "^7.25.0",
		"eslint-config-bkiac": "8.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.23.2",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": ">=6",
		"lerna": "^3.22.1",
		"lint-staged": ">=10",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"prettier-config-bkiac": "^1.1.0",
		"prettier-plugin-organize-imports": "^2.0.0",
		"prettier-plugin-packagejson": "^2.2.11",
		"tsconfig-bkiac": "^1.0.1",
		"typescript": "^4.2.4"
	}
}
