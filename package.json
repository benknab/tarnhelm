{
	"name": "tarnhelm",
	"version": "0.1.0",
	"repository": "git@github.com:bkiac/tarnhelm.git",
	"license": "MIT",
	"author": "Bence Kn√°b <benceknab@pm.me>",
	"scripts": {
		"check:format": "prettier --check .",
		"checks": "run-s --continue-on-error check:* packages:checks",
		"fix": "run-s fix:* packages:fix",
		"fix:format": "prettier --write \"./**/*{.ts,tsx,js,jsx,json,css,md}\"",
		"postinstall": "lerna bootstrap",
		"lint-staged": "lint-staged --concurrent false",
		"packages:checks": "lerna run checks --no-bail",
		"packages:fix": "lerna run fix --no-bail",
		"packages:pre-commit": "lerna run pre-commit --concurrency 1 --stream --no-bail",
		"packages:test": "lerna run test --no-bail",
		"pre-commit": "run-s lint-staged packages:pre-commit",
		"test": "yarn packages:test"
	},
	"devDependencies": {
		"husky": "^4.3.0",
		"lerna": "^3.22.1",
		"lint-staged": "^10.5.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"prettier-config-bkiac": "^1.1.0",
		"prettier-plugin-organize-imports": "^2.0.0",
		"prettier-plugin-packagejson": "^2.2.11",
		"typescript": "^4.1.2"
	}
}
